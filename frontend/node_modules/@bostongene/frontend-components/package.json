{
  "name": "@bostongene/frontend-components",
  "version": "1.0.0",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "typings": "./index.d.ts",
  "description": "Frontend components on React",
  "publishConfig": {
    "registry": "https://nexus.devbg.us/repository/npm-private/"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/bostongene/frontend-components.git"
  },
  "scripts": {
    "bundle": "mkdir dist && cp -a src/lib/. dist && NODE_ENV=production tsc --project tsconfig.json",
    "delete-source": "find dist -type f \\( -iname \\*.ts -o -iname \\*.tsx -o -iname \\types.js \\) -delete && rm -rf dist/lib/**/__tests__ && rm -rf dist/**/__tests__",
    "build": "rm -rf dist && npm run bundle && npm run delete-source && npm run copy",
    "copy": "cp package.json dist/ && cp README.md dist/ & cp .npmrc dist/ && cp -a declarations/. dist",
    "stylelint": "stylelint '**/*.scss'",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "jest --config=jest.config.json --env=jsdom --coverage"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "flexboxgrid2": "^7.2.1",
    "lodash": "^4.17.15",
    "nanoid": "^2.1.10"
  },
  "devDependencies": {
    "@bem-react/classname": "^1.5.8",
    "@types/classnames": "^2.2.9",
    "@types/enzyme": "^3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.9.1",
    "@types/lodash": "^4.14.149",
    "@types/nanoid": "^2.1.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/simulant": "^0.2.0",
    "@types/vfile-message": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "autoprefixer": "^9.7.4",
    "css-loader": "^3.4.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.1",
    "jest": "^24.8.0",
    "lint-staged": "^10.0.3",
    "node-sass": "^4.13.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "react": "^16.13.1",
    "react-docgen-typescript": "^1.16.2",
    "react-dom": "^16.13.1",
    "react-styleguidist": "^11.0.8",
    "sass-loader": "^8.0.2",
    "simulant": "^0.2.2",
    "style-loader": "^1.1.3",
    "stylelint": "^13.0.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.14.0",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "bash hooks/pre-push.sh"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "yarn stylelint --fix",
      "git add"
    ]
  },
  "license": "UNLICENSED"
}
